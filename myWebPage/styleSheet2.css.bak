*{
	
	padding:0;
	margin:0;
	box-sizing: border-box;
	font-family:Arial;
}

body{
    
	display:flex;
	height:100vh;
	justify-content:center;
	align-items:center;
	padding:10px;
	background-image: linear-gradient(135deg,#1ac6ff,#bb33ff);
	
}

.main{
	
	max-width:500px;
	width:100%;
	margin:10px;
	background-color:white;
	border-radius:8px;
	
}

.title-box{
	
	font-size:15px;
	font-weight:500px;
	max-width:500px;
	width:100%;
	height:60px;
	background-color:black;
	padding:10px;
	border-radius:8px 8px 0 0;
	color:white;
	display:flex;
	justify-content:center;
	align-items:center;
}

.user-details{
	
	max-width:500px;
	width:100%;
	padding:25px 30px;
	display:flex;
	justify-content:center;
	align-items:center;
	flex-wrap:wrap;
	justify-content:space-between;
}

.input-box{

	max-width:500px;
	width:100%;
	margin-bottom:8px;
	display:flex;
	justify-content:center;
	align-items:center;
}
span{
	
	font-size:12px;
}

span.details{
	
	width:150px;
	margin-right:10px;
}

.textDiv{
	
	width:20%;
	display:flex;
	flex-direction:column;
}
	
.input{
    
	max-width:500px;
	width:100%;
	margin-left:15px;
	height:30px;
	background-color:#DCDCDC;
	border:none ;
	border-radius: 5px;
	padding:10px;
}

form{
	
	max-width:500px;
	width:100%;
	font-weight:bold;
}


.textLine{
	
	width:100%;
	text-align:center;
	margin:10px 0 10px 0;
	
}

span.textLine{
	
	margin:0 auto 0 auto;
}

#checkbox{
	
	margin:10px 0 20px 70px;
	display:flex;
	flex-direction:row;
}

.terms{
	
	display:flex;
	align-items:center;
	margin:10px 0 20px 10px;
}

.checkboxDiv{
	
	display:flex;
	flex-direction:row;
}

.signupDiv{
	
	display:flex;
	justify-content:center;
	align-items:center;
}

.loginDiv{
	
	display:flex;
	justify-content:center;
	align-items:center;
}

button{
	
	padding-top:8px;
	padding-bottom:8px;
	padding-left:15px;
	padding-right:15px;
	border-radius:5px;
	border:none;
	background-color:#ea3c53;
}